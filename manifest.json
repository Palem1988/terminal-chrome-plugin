{
    "manifest_version": 2,
    "name": "CryptoControl Terminal",
    "description": "Plugin to be used with the CryptoControl Web Terminal",
    "icons": {
      "16": "cryptocontrol.png",
      "48": "cryptocontrol.png",
      "128": "cryptocontrol.png"
    },
    "version": "1.2.0",
    "background": {
        "scripts": [
            "background.js"
        ]
    },
    "browser_action": {
        "default_icon": "on.png",
        "default_title": "CryptoControl"
    },
    "permissions": [
        "storage",
        "webRequest",
		    "webRequestBlocking",
        "<all_urls>"
    ],
    "web_accessible_resources": [
        "off.png",
        "on.png"
    ],
     "externally_connectable": {
        "matches": ["*://localhost/*", "*://cryptocontrol.io/*"]
    }
}
