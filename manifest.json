{
    "manifest_version": 2,
    "name": "CryptoControl Terminal",
    "description": "Plugin to be used with the CryptoControl Web Terminal",
    "version": "1.0.0",
    "background": {
        "scripts": [
            "background.js"
        ]
    },
    "browser_action": {
        "default_icon": "off.png",
        "default_title": "CryptoControl"
    },
    "permissions": [
        "storage",
        "webRequest",
        "webRequestBlocking",
        "<all_urls>"
    ],
    "web_accessible_resources": [
        "off.png",
        "on.png"
    ]
}